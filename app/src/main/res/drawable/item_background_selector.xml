<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state (when item is focused) -->
    <item android:state_focused="true" android:drawable="@color/item_focused_background" />
    <!-- Pressed state (when clicked) -->
    <item android:state_pressed="true" android:drawable="@color/item_pressed_background" />
    <!-- Default state -->
    <item android:drawable="@android:color/transparent" />
</selector>
