<resources>
    <!-- Base application theme -->
    <style name="Theme.MediaPlayer" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/primary_text</item>

        <!-- Surface/background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- Text/icon colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorOnBackground">@color/primary_text</item>

        <!-- System UI -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Remove Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen theme for video player -->
    <style name="Theme.MediaPlayer.Fullscreen" parent="Theme.MediaPlayer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
