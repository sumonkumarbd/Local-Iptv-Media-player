<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/item_background_selector"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/ivChannelLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/channel_logo"
        android:scaleType="fitCenter"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:duplicateParentState="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChannelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_channel_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/tvChannelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:visibility="gone"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:duplicateParentState="true" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/toggle_favorite"
        android:padding="16dp"
        android:src="@drawable/ic_favorite_outline"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
